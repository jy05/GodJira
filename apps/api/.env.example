# Database Configuration
DATABASE_URL="postgresql://godjira:godjira123@localhost:5432/godjira?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="30m"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-this"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Password Configuration (NIST Compliance)
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_HISTORY_SIZE=5
MAX_LOGIN_ATTEMPTS=5
LOCK_DURATION_MINUTES=15

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Rate Limiting
THROTTLE_TTL=60000  # 1 minute in milliseconds
THROTTLE_LIMIT=100  # requests per TTL
