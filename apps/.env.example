# Database Configuration
# ⚠️  CRITICAL: Generate secure random password - DO NOT use example values!
DATABASE_URL="postgresql://godjira:CHANGE_THIS_PASSWORD@localhost:5432/godjira?schema=public"

# JWT Configuration
# ⚠️  Generate with: openssl rand -base64 64
JWT_SECRET="GENERATE_SECURE_SECRET_MIN_256_BITS"
JWT_EXPIRES_IN="30m"
JWT_REFRESH_SECRET="GENERATE_DIFFERENT_SECURE_SECRET_MIN_256_BITS"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# Password Configuration (NIST Compliance)
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_HISTORY_SIZE=5
MAX_LOGIN_ATTEMPTS=5
LOCK_DURATION_MINUTES=15

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Rate Limiting
THROTTLE_TTL=60000  # 1 minute in milliseconds
THROTTLE_LIMIT=100  # requests per TTL

# Email Configuration (SMTP)
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-specific-password"
MAIL_FROM_NAME="GodJira"
MAIL_FROM_EMAIL="noreply@godjira.com"
