# GodJira Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_URL="postgresql://godjira:godjira_dev_password@localhost:5432/godjira_dev?schema=public"

# PostgreSQL Connection Details (for Docker Compose)
POSTGRES_USER=godjira
POSTGRES_PASSWORD=godjira_dev_password
POSTGRES_DB=godjira_dev
POSTGRES_PORT=5432

# ===========================
# APPLICATION CONFIGURATION
# ===========================
NODE_ENV=development
PORT=3000

# ===========================
# JWT AUTHENTICATION
# ===========================
# IMPORTANT: Generate secure secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or use: .\scripts\generate-secrets.ps1 -JwtSecrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Token expiry times (in seconds or time strings like '30m', '7d')
JWT_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=7d

# ===========================
# DATA ENCRYPTION (REQUIRED FOR PRODUCTION)
# ===========================
# AES-256-GCM encryption key for data-at-rest (attachments, sensitive data)
# Generate with: openssl rand -hex 32
# Or use: .\scripts\generate-secrets.ps1 -EncryptionKey
# CRITICAL: This must be set in production!
ENCRYPTION_KEY=your-encryption-key-generate-with-openssl-rand-hex-32

# ===========================
# EMAIL CONFIGURATION (SMTP)
# ===========================
# For development, use Mailhog (SMTP_HOST=mailhog-dev, SMTP_PORT=1025)
# For production, use your email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@godjira.com

# ===========================
# FILE UPLOAD CONFIGURATION
# ===========================
MAX_FILE_SIZE=26214400  # 25MB in bytes (updated from 20MB)
UPLOAD_PATH=./uploads

# Avatar size limits
MAX_AVATAR_SIZE=10485760  # 10MB in bytes

# Attachment size limits
MAX_ATTACHMENT_SIZE=26214400  # 25MB in bytes (updated from 20MB)

# ===========================
# CORS & FRONTEND
# ===========================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend environment variables (for Vite)
# These must start with VITE_ to be exposed to the browser
VITE_API_BASE_URL=http://localhost:3000
VITE_WS_URL=http://localhost:3000

# ===========================
# RATE LIMITING
# ===========================
RATE_LIMIT_TTL=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=100    # Max requests per TTL window

# ===========================
# SESSION & SECURITY
# ===========================
SESSION_SECRET=your-session-secret-change-this

# Account lockout settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000  # 15 minutes in milliseconds

# Password policy (NIST compliant)
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL=debug  # Options: error, warn, info, debug, verbose
LOG_FORMAT=json  # Options: json, pretty

# Prometheus metrics endpoint
METRICS_ENABLED=true
METRICS_PORT=9090

# ===========================
# DOCKER COMPOSE CONFIGURATION
# ===========================
# PgAdmin
PGADMIN_EMAIL=admin@godjira.dev
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Redis (optional - TLS enabled in production)
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false  # Set to true for production with TLS

# Mailhog (email testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# API Debug port
DEBUG_PORT=9229

# ===========================
# KUBERNETES/PRODUCTION (Optional)
# ===========================
# These are used for production deployments with TLS/SSL
# Production mode requires ENCRYPTION_KEY, proper JWT secrets, and SSL certificates
# K8S_NAMESPACE=godjira
# K8S_SERVICE_ACCOUNT=godjira-sa
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# PostgreSQL SSL (production)
# DATABASE_URL with SSL: postgresql://user:pass@host:5432/db?schema=public&sslmode=require
# PGSSLMODE=require
# PGSSLCERT=/path/to/client.crt
# PGSSLKEY=/path/to/client.key
# PGSSLROOTCERT=/path/to/ca.crt

# ===========================
# EXTERNAL SERVICES (Optional)
# ===========================
# AWS S3 (if using cloud storage instead of local)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=godjira-uploads

# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================
# DEVELOPMENT TOOLS
# ===========================
# Prisma Studio
PRISMA_STUDIO_PORT=5555

# Hot reload settings
WATCH_RELOAD=true
POLLING=false

